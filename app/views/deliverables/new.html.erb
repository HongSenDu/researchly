<h1>Create a new deliverable for <%= @project.name %></h1>

<%= form_tag deliverables_path(@project), :style => 'width:80% ; margin:auto' do %>
    <%= label :deliverable, :name, 'Name', :class => 'col-form-label' %>
    <%= text_field :deliverable, 'name', :class => 'form-control' %>

    <%= label :deliverable, :description, 'Description', :class => 'col-form-label' %>
    <%= text_field :deliverable, 'description', :class => 'form-control' %>

    <%= label :deliverable, :status, 'Status', :class => 'col-form-label' %>
    <%= text_field :deliverable, 'status', :class => 'form-control' %>
    <br/>
    <%= submit_tag 'Create Deliverable', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', deliverables_path, :class => 'btn btn-secondary' %>
  <% end %>



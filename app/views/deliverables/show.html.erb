<p id="notice"><%= notice %></p>
<h1><%=@deliverable.name %></h1>
<table class="table table-hover" style="width:80% ; margin:auto">
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.username %></td>
        <td><%= link_to 'Destroy', remove_user_path(:id => @deliverable.id, :user_id => person.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Edit', edit_deliverable_path(@deliverable) %> |
<%= link_to 'Back', deliverables_path %>

<p id="notice"><%= notice %></p>

<h1>Groups</h1>
<%= form_tag groups_path :method => "GET" do%>
  <%= label_tag(:search, "Search for Groups: ") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag("Search", :name => nil) %>
<%end%>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td> | </td>
        <td><%= link_to 'View Group ', group_path(group) %></td>
        <td> | </td>
        <td><%= link_to 'Join Group ', join_group_path(group)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>

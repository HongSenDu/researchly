<div style="padding-left:30px;">
<h1>Groups</h1>
<%= form_tag(search_group_path, :method => "get",   
    class: 'navbar-form navbar-left') do %>  
  <div class="input-group" style="width:40%">  
    <%= search_field_tag :search, params[:search], placeholder: "Search Groups", class: "form-control" %>  
    <div class="input-group-btn">  
    <%= button_tag "Search", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
    </div>  
  </div>  
<% end %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td style="padding:10px;"><%= group.name %></td>
        <td> | </td>
        <td>
        <%= form_tag(join_group_path(group), :method => "get") do %>  
        <div class="input-group" style="padding:10px;">  
          <%= search_field_tag :group_code, params[:group_code], placeholder: "Enter group code to join", class: "form-control" %>  
            <div class="input-group-btn">  
            <%= button_tag "Join", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
          </div>  
        </div>
        <%end%></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
</div>
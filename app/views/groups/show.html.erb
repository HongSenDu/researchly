<p id="notice"><%= notice %></p>
<h1>Welcome to <%= @group.name %> </h1>
<h1>Description: <%= @group.description %> </h1>
<h3>Group Code: <%= @group.code %> </h3>
<table>
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project_path(project) %></td>
        <td><%= project.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
| <%= link_to 'Edit', edit_group_path(@group)%> |
<%= link_to 'Back', profile_path(session[:profile_id]) %> |
<%= link_to 'Leave Group', leave_group_path,  :method => :leave_group%> |
<%= link_to "Delete", group_path(@group), :method => :delete, :data => { confirm: 'Are you certain you want to delete this?' } %> |
<%= link_to 'New Project', new_project_path%> |

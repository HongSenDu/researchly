<!DOCTYPE html>
<html>
  <head>
    <title>Researchly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('flaskcleanicon.png') %>
  </head>
  <body>
    <% if user_signed_in?  %>
      <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;margin-bottom:15px;">
        <a class="navbar-brand" href="/users/<%=current_user.id%>">Researchly</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/users/<%=current_user.id%>">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/groups">Groups</a>
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/users/<%=current_user.id%>/view">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/inbox"><i class = "fa fa-envelope"></i> Inbox</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/u/sign_out">Sign Out</a>
            </li>
          </ul>
        </div>
      </nav>
    <% end %>
    <% if notice %>
      <p class="alert alert-success alert-dismissible fade show" style="width:95%;margin:auto">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>  
      <%= notice %>
      </p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger alert-dismissible fade show" style="width:90%;margin:auto">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <%= alert %>
      </p>
    <% end %>
    <%= yield %>
    <p class="alert"><%= alert %></p>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>

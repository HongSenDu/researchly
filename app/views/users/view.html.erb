<h1><%=@user.username%>'s Profile</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Contact: <%=@user.email%></td>
    </tr>
    <tr>
      <td>Bio: <%=@bio%></td>
    </tr>
  </tbody>
</table>
<% if @is_current_user %>
  <%= link_to 'Edit Profile', edit_user_path %>
<% end %>

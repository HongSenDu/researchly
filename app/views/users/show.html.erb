<p id="notice"><%= notice %></p>
<h1>Groups <% if @is_current_user == true %>
    you
  <% else %>
    <%= @user.username %>
  <% end %> are a member of:</h1>
<table>
  <thead>
    <tr>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name,  group_path(group)%></td>
        <td><%= group.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Group', new_group_path %> | 
<%= link_to 'Join a Group', groups_path %>
<br>
<%= link_to "View #{@user.username}'s Profile", view_user_path(@user) %>

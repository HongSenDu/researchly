<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table class="table table-hover" style="width:100% ; margin:auto" ; padding: 10px>
  <thead>
    <tr>
      <th>User</th>
      <th>Recipient</th>
      <th>Subject</th>
      <th>Body</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <%if message.group_id == nil %>
        <tr class = "<%= 'read' if message.read == true%>">
          <%if message.user_id%>
          <td><%= User.find(message.user_id).username %></td>
          <%end%>
          <%if message.recipient_id %>
          <td><%= User.find(message.recipient_id).username %></td>
          <%end%>
          <td><%= message.subject %></td>
          <td><%= message.body %></td>
          <td>| <%= link_to 'Show', message %> |
          <%= link_to 'Edit', edit_message_path(message) %> |
          <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %> |</td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

